<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <gradient
                            android:startColor="@color/clearBlack"
                            android:endColor="@color/paleBlack"
                            android:angle="270" />
                    <corners android:radius="40dp"/>
                </shape>
            </item>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                            android:startColor="@color/clearGreen"
                            android:endColor="@color/paleGreen"
                            android:angle="270" />
                    <corners
                            android:radius="40dp"/>
                    <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="10dp"
                            android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/clearWhite"/>
                    <corners
                            android:radius="40dp"/>
                    <stroke android:color="@color/black"
                            android:width="1dp"/>
                    <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="10dp"
                            android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>