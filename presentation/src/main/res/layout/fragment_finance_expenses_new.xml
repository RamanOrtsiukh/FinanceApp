<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel"
                  type="com.gmail.ortuchr.finance.presentation.screen.expenses_new.FinanceExpensesNewViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:fadeScrollbars="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/buttonBack"
                android:layout_marginBottom="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guideline"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>

                <TextView
                        android:id="@+id/expenseTitle"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/expenseTitle"
                        android:textSize="@dimen/textSizeBig"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|bottom"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"/>
                <TextView
                        android:id="@+id/textViewAmountTitle"
                        style="@style/textViewStyle"
                        android:text="@string/textViewAmountTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/expenseTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:id="@+id/textViewDateTitle"
                        style="@style/textViewStyle"
                        android:text="@string/textViewDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textViewAmountTitle"/>
                <EditText
                        android:id="@+id/editTextAmount"
                        style="@style/editTextStyle"
                        android:text="@={viewModel.amountExpense}"
                        android:textSize="@dimen/numberSizeNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:ignore="AutoFill"
                        android:hint="@string/textViewSymTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/textViewAmountTitle"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:id="@+id/textViewDate"
                        style="@style/textViewStyle"
                        android:text="@{viewModel.dateExpense}"
                        android:textSize="@dimen/numberSizeNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/editTextAmount"/>

                <RadioGroup
                        android:id="@+id/radioGroupExpenseChoice1"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@+id/editTextAmount"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:checkedButton="@={viewModel.selectedItemIdLeft}"
                        android:focusable="false">
                    <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle1}"
                            android:onClick="@{() -> viewModel.resetRightRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle2}"
                            android:onClick="@{() -> viewModel.resetRightRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle3}"
                            android:onClick="@{() -> viewModel.resetRightRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio4"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle4}"
                            android:onClick="@{() -> viewModel.resetRightRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio5"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle5}"
                            android:onClick="@{() -> viewModel.resetRightRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio6"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle6}"
                            android:onClick="@{() -> viewModel.resetRightRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio7"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle7}"
                            android:onClick="@{() -> viewModel.resetRightRadioGroup()}"
                            android:focusable="false"/>
                </RadioGroup>

                <RadioGroup
                        android:id="@+id/radioGroupExpenseChoice2"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/radioGroupExpenseChoice1"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        android:checkedButton="@={viewModel.selectedItemIdRight}"
                        android:focusable="false">
                    <RadioButton
                            android:id="@+id/radio8"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle8}"
                            android:onClick="@{() -> viewModel.resetLeftRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio9"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle9}"
                            android:onClick="@{() -> viewModel.resetLeftRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio10"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle10}"
                            android:onClick="@{() -> viewModel.resetLeftRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio11"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle11}"
                            android:onClick="@{() -> viewModel.resetLeftRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio12"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle12}"
                            android:onClick="@{() -> viewModel.resetLeftRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio13"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle13}"
                            android:onClick="@{() -> viewModel.resetLeftRadioGroup()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radio14"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/radioButtonHeightNormal"
                            android:text="@{viewModel.choiceTitle14}"
                            android:onClick="@{() -> viewModel.resetLeftRadioGroup()}"
                            android:focusable="false"/>
                </RadioGroup>

                <TextView
                        android:id="@+id/buttonChangeCategory"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buttonChangeCategory"
                        android:textSize="@dimen/textSizeSmall"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroupExpenseChoice1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>

                <RadioGroup
                        android:id="@+id/radioGroupAccountChoice"
                        style="@style/textViewStyle"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonChangeCategory"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="16dp"
                        android:focusable="false">
                    <RadioButton
                            android:id="@+id/radioCardType"
                            android:text="@string/cardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/numberSizeNormal"
                            android:checked="@={viewModel.isCard()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radioCashType"
                            android:text="@string/cashTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="@={viewModel.isCash()}"
                            android:focusable="false"/>
                </RadioGroup>

                <EditText
                        android:id="@+id/addExpenseComment"
                        style="@style/editTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/addCommentTitle"
                        android:text="@={viewModel.commentExpense}"
                        android:inputType="text"
                        tools:ignore="AutoFill"
                        android:maxLength="30"
                        android:singleLine="false"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroupAccountChoice"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

        <Button
                android:id="@+id/buttonBack"
                style="@style/backButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="@string/buttonBackTitle"
                android:onClick="@{() -> viewModel.goBack()}"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
        <Button
                android:id="@+id/buttonAdd"
                style="@style/backButtonStyle"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="@string/buttonAddTitle"
                android:visibility="@{viewModel.isNewExpense}"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline2"/>
        <Button
                android:id="@+id/buttonChange"
                style="@style/backButtonStyle"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="@string/buttonChangeTitle"
                android:visibility="@{!viewModel.isNewExpense}"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonBack"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/buttonDelete"
                app:layout_constraintHorizontal_chainStyle="spread"
                android:layout_marginEnd="8dp"/>
        <Button
                android:id="@+id/buttonDelete"
                style="@style/backButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="@string/buttonDeleteTitle"
                android:visibility="@{!viewModel.isNewExpense}"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toEndOf="@+id/buttonChange"
                app:layout_constraintHorizontal_bias="0.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>