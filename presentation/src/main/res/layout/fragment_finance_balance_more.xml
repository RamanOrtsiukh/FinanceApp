<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel"
                  type="com.gmail.ortuchr.finance.presentation.screen.balance_more.FinanceBalanceMoreViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:fadeScrollbars="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/buttonBack"
                android:layout_marginBottom="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guideline"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>

                <TextView
                        android:id="@+id/balanceTitleNow"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/balanceTitle"
                        android:textSize="@dimen/textSizeBig"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|bottom"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"/>
                <TextView
                        android:id="@+id/balanceSignNow"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/balanceSignNow"
                        android:textSize="@dimen/textSizeSmall"
                        android:gravity="center_horizontal|top"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="50dp"/>
                <TextView
                        android:id="@+id/balanceTotalAmountNow"
                        style="@style/numberStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.balanceAmount}"
                        android:textSize="@dimen/numberSizeBig"
                        android:textColor="@color/green"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/balanceTitleNow"/>
                <TextView
                        android:id="@+id/balanceCardTitleNow"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cardTitle"
                        app:layout_constraintTop_toBottomOf="@+id/balanceSignNow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:id="@+id/balanceCardAmountNow"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.balanceAmountCard}"
                        android:textSize="@dimen/numberSizeNormal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/balanceCardTitleNow"/>
                <TextView
                        android:id="@+id/balanceCashTitleNow"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cashTitle"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/balanceCardTitleNow"/>
                <TextView
                        android:id="@+id/balanceCashAmountNow"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.balanceAmountCash}"
                        android:textSize="@dimen/numberSizeNormal"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/balanceCardAmountNow"/>
                <View
                        android:id="@+id/line1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#000000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/balanceCardAmountNow"
                        android:layout_marginTop="8dp"/>


                <TextView
                        android:id="@+id/balanceTitleMonth"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/balanceTitle"
                        android:textSize="@dimen/textSizeBig"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|bottom"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/line1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"/>
                <TextView
                        android:id="@+id/balanceSignMonth"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/balanceSignMonth"
                        android:textSize="@dimen/textSizeSmall"
                        android:gravity="center_horizontal|top"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/line1"
                        android:layout_marginTop="50dp"/>
                <TextView
                        android:id="@+id/balanceTotalAmountMonth"
                        style="@style/numberStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.balanceAmountLast}"
                        android:textSize="@dimen/numberSizeBig"
                        android:textColor="@color/green"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/balanceTitleMonth"/>
                <TextView
                        android:id="@+id/balanceCardTitleMonth"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cardTitle"
                        app:layout_constraintTop_toBottomOf="@+id/balanceSignMonth"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:id="@+id/balanceCardAmountMonth"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.balanceAmountCardLast}"
                        android:textSize="@dimen/numberSizeNormal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/balanceCardTitleMonth"/>
                <TextView
                        android:id="@+id/balanceCashTitleMonth"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cashTitle"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/balanceCardTitleMonth"/>
                <TextView
                        android:id="@+id/balanceCashAmountMonth"
                        style="@style/textViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.balanceAmountCashLast}"
                        android:textSize="@dimen/numberSizeNormal"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/balanceCardAmountMonth"/>
                <View
                        android:id="@+id/line2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#000000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/balanceCardAmountMonth"
                        android:layout_marginTop="8dp"/>


                <TextView
                        android:id="@+id/textViewStartDay"
                        style="@style/textViewStyle"
                        android:text="@string/textViewStartDay"
                        android:textSize="@dimen/textSizeSmall"
                        android:singleLine="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/line2"
                        app:layout_constraintStart_toStartOf="@+id/textViewUseDebts"
                        app:layout_constraintEnd_toEndOf="@+id/textViewUseDebts"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:id="@+id/textViewSaveRest"
                        style="@style/textViewStyle"
                        android:text="@string/textViewSaveRest"
                        android:textSize="@dimen/textSizeSmall"
                        android:singleLine="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/textViewStartDay"
                        app:layout_constraintStart_toStartOf="@+id/textViewUseDebts"
                        app:layout_constraintEnd_toEndOf="@+id/textViewUseDebts"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:id="@+id/textViewUseDebts"
                        style="@style/textViewStyle"
                        android:text="@string/textViewUseDebts"
                        android:textSize="@dimen/textSizeSmall"
                        android:singleLine="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewSaveRest"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:id="@+id/textViewShowHints"
                        style="@style/textViewStyle"
                        android:text="@string/textViewShowHints"
                        android:textSize="@dimen/textSizeSmall"
                        android:singleLine="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/textViewUseDebts"
                        app:layout_constraintEnd_toEndOf="@+id/textViewUseDebts"
                        app:layout_constraintBottom_toBottomOf="@+id/checkBoxShowHints"/>
                <TextView
                        android:id="@+id/textViewShowWarnings"
                        style="@style/textViewStyle"
                        android:text="@string/textViewShowWarnings"
                        android:textSize="@dimen/textSizeSmall"
                        android:singleLine="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/textViewUseDebts"
                        app:layout_constraintEnd_toEndOf="@+id/textViewUseDebts"
                        app:layout_constraintBottom_toBottomOf="@+id/checkBoxShowWarnings"
                        app:layout_constraintTop_toTopOf="@+id/checkBoxShowWarnings"/>
                <EditText
                        android:id="@+id/editTextStartDay"
                        style="@style/editTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.settingDayFrom}"
                        android:inputType="number"
                        android:maxLength="2"
                        tools:ignore="AutoFill"
                        android:hint="@string/textViewSymTitle"
                        app:layout_constraintTop_toTopOf="@+id/textViewStartDay"
                        app:layout_constraintBottom_toBottomOf="@+id/textViewStartDay"
                        app:layout_constraintEnd_toEndOf="@+id/checkBoxSaveRest"
                        app:layout_constraintStart_toStartOf="@+id/checkBoxSaveRest"/>
                <CheckBox
                        android:id="@+id/checkBoxSaveRest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.settingWithPastMonths}"
                        android:onClick="@{() -> viewModel.saveSettingWithPastMonths()}"
                        android:focusable="false"
                        app:layout_constraintBottom_toBottomOf="@+id/textViewSaveRest"
                        app:layout_constraintTop_toTopOf="@+id/textViewSaveRest"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>
                <CheckBox
                        android:id="@+id/checkBoxUseDebts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.settingWithDebts}"
                        android:onClick="@{() -> viewModel.saveSettingWithDebts()}"
                        android:focusable="false"
                        app:layout_constraintTop_toTopOf="@+id/textViewUseDebts"
                        app:layout_constraintBottom_toBottomOf="@+id/textViewUseDebts"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>
                <CheckBox
                        android:id="@+id/checkBoxShowHints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.settingShowHints}"
                        android:onClick="@{() -> viewModel.saveSettingShowHints()}"
                        android:focusable="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/checkBoxUseDebts"/>
                <CheckBox
                        android:id="@+id/checkBoxShowWarnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.settingShowWarnings}"
                        android:onClick="@{() -> viewModel.saveSettingShowWarnings()}"
                        android:focusable="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/checkBoxShowHints"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
                android:id="@+id/buttonBack"
                style="@style/backButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="@string/buttonBackTitle"
                android:onClick="@{() -> viewModel.goBack()}"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
        <Button
                android:id="@+id/buttonDelete"
                style="@style/backButtonStyle"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="@string/buttonDeleteAllTitle"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonBack"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>