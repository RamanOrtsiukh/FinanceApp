<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel"
                  type="com.gmail.ortuchr.finance.presentation.screen.debts_new.FinanceDebtsNewViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:fadeScrollbars="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/buttonBack"
                android:layout_marginBottom="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guideline"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>

                <TextView
                        android:id="@+id/debtTitle"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/debtTitle"
                        android:textSize="@dimen/textSizeBig"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|bottom"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"/>
                <TextView
                        android:id="@+id/debtAmountTitle"
                        style="@style/textViewStyle"
                        android:text="@string/debtAmountTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/debtTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        android:layout_marginTop="8dp"/>
                <EditText
                        android:id="@+id/debtAmount"
                        style="@style/editTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.amountDebt}"
                        android:textSize="@dimen/numberSizeNormal"
                        tools:ignore="AutoFill"
                        android:hint="@string/textViewSymTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/debtAmountTitle"/>
                <TextView
                        android:id="@+id/debtWhoTitle"
                        style="@style/textViewStyle"
                        android:text="@{viewModel.isFromMe() ? @string/debtFromTitle : @string/debtToTitle}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/debtAmountTitle"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/debtAmount"/>
                <EditText
                        android:id="@+id/debtWho"
                        style="@style/editTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.debtor}"
                        android:inputType="textPersonName"
                        android:maxLength="20"
                        android:textSize="@dimen/numberSizeNormal"
                        tools:ignore="AutoFill"
                        android:hint="@string/textViewSymTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/debtWhoTitle"/>
                <TextView
                        android:id="@+id/debtDateStartTitle"
                        style="@style/textViewStyle"
                        android:text="@string/debtDateStartTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/debtWho"
                        app:layout_constraintStart_toStartOf="@+id/debtAmountTitle"/>
                <TextView
                        android:id="@+id/debtDateStart"
                        style="@style/textViewStyle"
                        android:text="@{viewModel.dateStart}"
                        android:textSize="@dimen/numberSizeNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBaseline_toBaselineOf="@+id/debtDateStartTitle"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:id="@+id/debtDateReturnTitle"
                        style="@style/textViewStyle"
                        android:text="@string/debtDateReturnTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/debtAmountTitle"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/debtDateStart"/>
                <TextView
                        android:id="@+id/debtDateReturn"
                        style="@style/textViewStyle"
                        android:text="@{viewModel.dateFinish}"
                        android:textSize="@dimen/numberSizeNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBaseline_toBaselineOf="@+id/debtDateReturnTitle"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <RadioGroup
                        android:id="@+id/radioGroupDebtChoice"
                        style="@style/textViewStyle"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/debtDateReturn"
                        android:focusable="false">
                    <RadioButton
                            android:id="@+id/radioDebtFromMe"
                            android:text="@string/debtFromMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="0sp"
                            android:paddingEnd="@dimen/numberSizeNormal"
                            android:checked="@={viewModel.isFromMe()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radioDebtToMe"
                            android:text="@string/debtToMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="@={viewModel.isToMe()}"
                            android:focusable="false"/>
                </RadioGroup>

                <RadioGroup
                        android:id="@+id/radioGroupAccountChoice"
                        style="@style/textViewStyle"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroupDebtChoice"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="24dp"
                        android:focusable="false">
                    <RadioButton
                            android:id="@+id/radioCardType"
                            android:text="@string/cardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="0sp"
                            android:paddingEnd="@dimen/numberSizeNormal"
                            android:checked="@={viewModel.isCard()}"
                            android:focusable="false"/>
                    <RadioButton
                            android:id="@+id/radioCashType"
                            android:text="@string/cashTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="@={viewModel.isCash()}"
                            android:focusable="false"/>
                </RadioGroup>

                <EditText
                        android:id="@+id/addExpenseComment"
                        style="@style/editTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/addCommentTitle"
                        android:inputType="text"
                        android:text="@={viewModel.commentDebt}"
                        tools:ignore="AutoFill"
                        android:maxLength="100"
                        android:singleLine="false"
                        app:layout_constraintTop_toBottomOf="@+id/radioGroupAccountChoice"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="24dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
        <Button
                android:id="@+id/buttonBack"
                style="@style/backButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="@string/buttonBackTitle"
                android:onClick="@{() -> viewModel.goBack()}"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
        <Button
                android:id="@+id/buttonAdd"
                style="@style/backButtonStyle"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="@string/buttonAddTitle"
                android:visibility="@{viewModel.isNewDebt()}"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline2"/>
        <Button
                android:id="@+id/buttonChange"
                style="@style/backButtonStyle"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="@string/buttonChangeTitle"
                android:visibility="@{!viewModel.isNewDebt()}"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonBack"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/buttonDelete"
                app:layout_constraintHorizontal_chainStyle="spread"
                android:layout_marginEnd="8dp"/>
        <Button
                android:id="@+id/buttonDelete"
                style="@style/backButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="@string/buttonDeleteTitle"
                android:visibility="@{!viewModel.isNewDebt()}"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toEndOf="@+id/buttonChange"
                app:layout_constraintHorizontal_bias="0.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>